<Window x:Class="SpaceShooter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Space Shooter" Height="600" Width="800"
        KeyDown="Window_KeyDown" KeyUp="Window_KeyUp" WindowStartupLocation="CenterScreen">
    <Canvas x:Name="GameCanvas" Background="Black" Focusable="True">
        <!-- Bandits added in code -->
        <StackPanel Orientation="Horizontal">
            <Label x:Name="lbl_ScoreText" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="10,10,0,10" Content="SCORE :" Foreground="LightGray" FontFamily="{StaticResource Scoreboard}" FontSize="35" FontStyle="Normal" FontWeight="Normal"/>
            <Label x:Name="lbl_Score" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,11,10,0" Content="0" Foreground="LightGray" FontFamily="{StaticResource Scoreboard}" FontSize="35" FontStyle="Normal" FontWeight="Normal"/>            
        </StackPanel>
        <Image x:Name="img_SpaceShip" Width="40" Height="40" Canvas.Left="10" Canvas.Bottom="10" Source="Resources/SpaceShip.png" Uid="Spacecraft"/>
    </Canvas>
</Window>
